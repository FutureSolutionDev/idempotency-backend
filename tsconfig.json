{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": false,
    "baseUrl": "./src",
    "paths": {
      "@Utils/*": [
        "Utils/*"
      ],
      "@Middleware/*": [
        "Middleware/*"
      ],
      "@Types/*": [
        "Types/*"
      ],
      "@Idempotency/*": [
        "Idempotency/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}